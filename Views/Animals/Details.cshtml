@model AnimalBiographyApp.Models.Animal

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name">
        </div>
        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <h4 class="text-muted">@Model.Species</h4>

            <div class="mt-4">
                <h5>Habitat</h5>
                <p>@Model.Habitat</p>

                <h5>Description</h5>
                <p>@Model.Description</p>

                <h5>Diet</h5>
                <p>@Model.Diet</p>

                <h5>Conservation Status</h5>
                <span class="badge bg-info">@Model.ConservationStatus</span>

                <div class="mt-4">
                    <p class="text-muted">Added on @Model.DateAdded.ToString("MMMM dd, yyyy")</p>
                </div>

                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
