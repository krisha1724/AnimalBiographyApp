@model AnimalBiographyApp.Models.Animal

@{
    ViewData["Title"] = "Delete " + Model.Name;
}

<div class="container mt-4">
    <h1>Delete Animal</h1>
    <h4 class="text-danger">Are you sure you want to delete this animal?</h4>

    <div class="row mt-4">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name">
        </div>
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Species</dt>
                <dd class="col-sm-8">@Model.Species</dd>

                <dt class="col-sm-4">Habitat</dt>
                <dd class="col-sm-8">@Model.Habitat</dd>

                <dt class="col-sm-4">Description</dt>
                <dd class="col-sm-8">@Model.Description</dd>

                <dt class="col-sm-4">Diet</dt>
                <dd class="col-sm-8">@Model.Diet</dd>

                <dt class="col-sm-4">Conservation Status</dt>
                <dd class="col-sm-8">
                    <span class="badge bg-info">@Model.ConservationStatus</span>
                </dd>

                <dt class="col-sm-4">Added On</dt>
                <dd class="col-sm-8">@Model.DateAdded.ToString("MMMM dd, yyyy")</dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
